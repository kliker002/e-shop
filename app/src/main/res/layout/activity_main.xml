<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_button"
    tools:context="ru.kliker02.practice.practice.MainActivity">

    <Button
        android:id="@+id/toLogin"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@+id/tv_pas"
        android:background="@drawable/buy_button"
        android:textSize="20dp"
        android:textColor="#FFF"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_log"
        android:textColor="#FFF"
        android:layout_width="137dp"
        android:layout_height="41dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="LOGIN: "
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pas"
        android:layout_width="160dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="PASSWORD: "
        android:textColor="#FFF"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_log" />

    <EditText
        android:textColor="#FFF"
        android:id="@+id/log"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintLeft_toRightOf="@+id/tv_pas"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/pas" />

    <EditText
        android:textColor="#FFF"
        android:id="@+id/pas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:inputType="textShortMessage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_log"
        android:layout_marginLeft="0dp" />
</android.support.constraint.ConstraintLayout>
